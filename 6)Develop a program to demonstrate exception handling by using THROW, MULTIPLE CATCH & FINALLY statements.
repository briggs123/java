import java.lang.*;
import java.util.Scanner;
public class Main 
{
    public static void main(String[] args)
    {
        int a[]=new int[5];
       try 
       {
           a[20]=2;
       }
       catch(IndexOutOfBoundsException e)
       {
          System.out.println("the idex mentioned in  array exceed the size of the index declared");
       }
        try{
              int b=100/0;
          }
          catch(ArithmeticException s)
          {
              System.out.println("any number cannot be divided by zero");
          }
       finally
       {
           System.out.println("the array size need to be declared less than size");
       }
        
    }
}
